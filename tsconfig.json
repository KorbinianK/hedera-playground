        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./dist",
        "moduleResolution": "node",
        "lib": ["es6", "dom"],
        "declaration": false,
        "allowJs": true,
        "removeComments": false,
        "sourceMap": true,
        "esModuleInterop": true
